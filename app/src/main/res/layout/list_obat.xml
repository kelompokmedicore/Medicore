<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/obat_ll_detail"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/obat_tv_nama"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Lorem Ipsum"
            android:textSize="20sp"
            android:textColor="@color/black2"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/obat_tv_deskripsi"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_below="@id/obat_tv_nama"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua. Amet mattis vulputate enim nulla. Viverra vitae congue eu consequat ac felis donec."
            android:textColor="@color/black2"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Jenis Obat: "
                android:textColor="@color/black2"/>

            <TextView
                android:id="@+id/obat_tv_jenis"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="[JENIS OBAT]"
                android:textColor="@color/black2"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Quantity: "
                android:textColor="@color/black2"/>

            <TextView
                android:id="@+id/obat_tv_qty"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="5dp"
                android:text="[QTY]"
                android:textColor="@color/black2"/>

        </LinearLayout>


    </LinearLayout>

    <Button
        android:id="@+id/post_btn_update"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_marginLeft="10dp"
        android:layout_toRightOf="@id/obat_ll_detail"
        android:text="Update"
        android:textSize="11sp"/>

    <Button
        android:id="@+id/post_btn_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete"
        android:textSize="11sp"
        android:layout_toRightOf="@id/post_btn_update"
        android:layout_marginLeft="5dp"
        android:layout_centerInParent="true"/>

</RelativeLayout>